<h1><%= @place["name"] %></h1>

<h2 class="mt-4">Entries</h2>

<div class="row">
  <% @entries.each do |entry| %>
    <div class="col-md-4 mb-4">
      <div class="card h-100">
        <div class="card-body">
          <h5 class="card-title"><%= entry["title"] %></h5>
          <p class="card-text"><%= entry["description"] %></p>
          <p class="card-subtitle text-muted"><%= entry["occurred_on"] %></p>
        </div>
      </div>
    </div>
  <% end %>
</div>

<% if session["user_id"] != nil %>
  <a href="/entries/new?place_id=<%= @place["id"] %>" class="btn btn-success me-2">New Entry</a>
<% end %>

<a href="/places" class="btn btn-secondary">Back to All Places</a>
